<div class="container" style="margin-top: 100px">
    <div class="row">
        <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control"
                    placeholder="Título" name="titulo">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <textarea type="text" class="form-control"
                    placeholder="Subtítulo" name="subtitulo"></textarea>
                </div>
            </div>
            <div class="mb-3 row">
                <label>Imagen: <input type="file" name="imagen" id="imagen"/></label>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <textarea type="text" class="form-control"
                    placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
        {{#if error}}
            <p>{{message}}</p>
        {{/if}}
    </div>
</div>